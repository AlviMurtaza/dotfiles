alias c='clear'
alias g='git'
alias rf='trash'
alias mkdir='mkdir -p'
alias path='echo $PATH | tr -s ":" "\n"'

alias l='ls'
alias a='ls -la'
alias ll='ls -lh'

alias d='cd ~/.dotfiles'

alias sl='screen -ls'
alias sn='screen -S'

alias vu='vagrant up'
alias vs='vagrant ssh'
alias vp='vagrant provision'
alias vh='vagrant halt'
alias vd='vagrant destroy'
alias vbl='vagrant box list'
alias vbr='vagrant box remove'

alias ta='tmux attach-session -t '
alias td='tmux detach'
alias tn='tmux new-session -s '
alias tk='tmux kill-session -t '
alias tl='tmux ls'
alias tat=new-tmux-from-dir-name

alias ehosts='sudo vim /etc/hosts'

alias gcopy='git symbolic-ref --short HEAD | pbcopy'
alias gbc='git checkout $(git branch | cut -c 3- | fzf)'
alias gdd='git diff --color | diff-so-fancy'
